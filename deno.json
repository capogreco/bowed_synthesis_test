{
  "tasks": {
    "start": "deno run --allow-net --allow-read serve.ts",
    "dev": "deno run --watch --allow-net --allow-read serve.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"]
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  }
}